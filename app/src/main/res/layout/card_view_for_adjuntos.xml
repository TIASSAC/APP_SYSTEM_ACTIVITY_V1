<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_for_reading"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivicono"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_imagen_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/txtNombreArchivo"
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:layout_height="match_parent"
                            android:text="...">
                        </TextView>
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/txtTamArchivo"
                            android:layout_width="match_parent"
                            android:textSize="11dp"
                            android:layout_height="match_parent"
                            android:text="0 KB">
                        </TextView>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btnEliminarArchivo"
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/md_red_400"
                        app:srcCompat="@drawable/ic_delete_forever_black_24dp"
                        android:contentDescription="TODO"/>
                </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>